<!-- courses.hbs -->

<div class="container">
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Course Code</th>
          <th>Course Description</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
        <tr>
          <!-- Link to /course/id -->
          <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
          <!-- Link to /students?course=X -->
          <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Conditionally display the error message if there are no courses -->
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
</div>
