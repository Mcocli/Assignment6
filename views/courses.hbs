<!-- courses.hbs -->

<div class="container">
  <h2> Courses </h2>
  <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Course Code</th>
          <th>Course Description</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
        <tr>
        
          <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
         
          <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

 
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
</div>
